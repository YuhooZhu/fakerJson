package cn.fakejson.fakejson;

import java.lang.reflect.InvocationTargetException;
import java.util.ArrayList;
import java.util.HashSet;
import java.util.List;
import java.util.Set;

import org.apache.commons.beanutils.BeanUtils;

import cn.fakejson.fakejson.util.JsonUtil;

public class Fakejson {

	public static <E> Set<E> fakejsons(FakeClass<E> fake) throws IllegalArgumentException, IllegalAccessException,
			InstantiationException, InvocationTargetException, NoSuchMethodException {
		Set<E> list = new HashSet<E>();
		
		for (int i = 0; i < fake.getSize(); i++) {
			FakeClass<E> fakex = new FakeClass<E>();
			BeanUtils.copyProperties(fakex, fake);
			
			fakex.setSeq(i);
			list.add(fakex.getEntity());
		}

		System.out.println(JsonUtil.toString(list));

		return list;
	}
}
