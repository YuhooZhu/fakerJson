package cn.fakejson.fakejson;

import java.lang.reflect.InvocationTargetException;
import java.util.ArrayList;
import java.util.List;

import cn.fakejson.fakejson.util.JsonUtil;

public class Fakejson {

	public static <E> List<E> fakejsons(E fake, int size) throws IllegalArgumentException, IllegalAccessException,
			InstantiationException, InvocationTargetException, NoSuchMethodException, CloneNotSupportedException {
		List<E> list = new ArrayList<E>();

		for (int i = 0; i < size; i++) {
			FakeClass<E> fakex = new FakeClass<E>(fake);
			FakeClassService<E> fsvr = new FakeClassService<>();

			fakex.setEntity(fake);
			fakex.setSeq(i);
			list.add(i, fsvr.fake(fakex));
		}

		System.out.println(JsonUtil.toString(list));

		return list;
	}
}
